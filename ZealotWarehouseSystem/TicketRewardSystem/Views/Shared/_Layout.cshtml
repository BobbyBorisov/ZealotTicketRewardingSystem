<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/kendo")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/kendo")
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("TicketReward System", "Index", "Home", new { area = "" }, new { @class = "brand" })
                <div class="nav-collapse collapse">
                    <ul class="nav" id="MainMenu">

                        @if (User.IsInRole("admin"))
                        {
                            <li>
                                Admin
                                <ul>
                                    <li>@Html.ActionLink("Tickets", "Index", "TicketsAdmin", new { area = "Administration" }, null)</li>
                                    <li>@Html.ActionLink("Rules", "Index", "Rules", new { area = "Administration" }, null)</li>
                                    <li>@Html.ActionLink("Achievements", "Index", "Achievements", new { area = "Administration" }, null)</li>
                                    <li>@Html.ActionLink("User Roles", "Index", "Users", new { area = "Administration" }, null)</li>
                                </ul>
                            </li>
                        }
                        else if (User.IsInRole("support"))
                        {
                            <li>
                                Support
                                <ul>
                                    <li>@Html.ActionLink("Tickets", "Index", "TicketSupport", new { area = "Support" }, null)</li>
                                </ul>
                            </li>
                        }
                        else
                        {
                                        <li>@Html.ActionLink("Tickets", "Tickets", "Home", new { area = "" }, null)</li>
                        }
                                </ul>
                                @Html.Partial("_LoginPartial")
                                        </div>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
        
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $("#MainMenu").kendoMenu();
    </script>
</body>
</html>
